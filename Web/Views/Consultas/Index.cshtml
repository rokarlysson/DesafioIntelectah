@model IEnumerable<ApplicationCore.Dto.ConsultaDto>

@{
    ViewBag.Title = "Consultas";
}

<h2>Consultas</h2>

@{
    <hr />
    if (ViewBag.Error != null)
    {
        <div>ViewBag.Error</div>
    }
}

<p>
    @Html.ActionLink("Criar novo", "Criar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PacienteId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataHora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExameId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroProtocolo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.ExameId)
            @Html.HiddenFor(modelItem => item.PacienteId)
            <td>
                @Html.DisplayFor(modelItem => item.NomePaciente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeExame)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroProtocolo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.Id })
                @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
            </td>
        </tr>
    }

</table>
